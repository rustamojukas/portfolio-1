main.blog
    svg.triangle(viewBox="0 0 1000 82" preserveAspectRatio="none")
        polygon.triangle__left(points="0,0 0,85 500.5,85 500.5,80")
        polygon.triangle__right(points="500,80 1000,0 1000,85 500,85")
    .container
        aside.blog__sidebar
            ul(class='blog__sidebar-list')
                each item in content
                    li(class='blog__sidebar-item '+item.active)
                        a(href='#' class='blog__sidebar-link')= item.title
        section.blog__articles-container
            each item in content
                article(class='article blog__article')
                    h3.article__title=item.title
                    time.article__date=item.date
                    each text in item.text
                        p.article__text=text
