section.whatabout
    .whatabout__say
        .container
            svg(class='whatabout__bg')
                use(xlink:href="img/svg-sprites/sprite.svg#about_header")
            h2.main-title.whatabout__main-title Что обо мне говорят
            ul.whatabout__list
                each item in whataboutItems
                    li.whatabout__list-item
                        .whatabout__photo
                            img(src=item.pic class='whatabout__pic' alt=item.name)
                        blockquote.whatabout__content=item.text
                        span.whatabout__name=item.name
                        span.whatabout__job=item.job



    .whatabout__feedback
        .container
            .window.feedback-window
                h3.main-subtitle.feedback-window__main-subtitle Связаться со мной
                form.form.feedback-form(name='feddback-form' id='feedback-form' action='/feedback' method='POST')
                    .form__input-elems.feedback-form__elems
                        .form__cont-input.feedback-form__cont-input
                            input(type='text' id='name'  class='form__input-text feedback-form__input-text' name='name' placeholder='Имя' data-content='Вы не ввели имя')
                        .form__cont-input.feedback-form__cont-input
                            input(type='text' id='email' class='form__input-text feedback-form__input-text' name='email' placeholder='Email' data-content='Вы не ввели Email')
                        .form__cont-input.form__cont-input_textarea.feedback-form__cont-input
                            textarea(id='message' class='form__input-textarea' name='message' placeholder='Ваше сообщение' data-content='Вы не ввели сообщение')
                    .feedback-form__btn-elems
                        button(type='submit' class='btn btn_green btn_border-right feedback-form__btn') Отправить
                        button(type='reset' class='btn btn_green btn_border-right feedback-form__btn') Очистить
            .anchor.anchor_down.whatabout__anchor
                a.anchor__link(href='#header') Наверх
                    svg.anchor__link-icon
                        use(xlink:href='img/svg-sprites/sprite.svg#arrow_down')
