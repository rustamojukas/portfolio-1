                                svg(class="social-icon social-icon_" + link)
                                    use(xlink:href="img/svg-sprites/sprite.svg#" + link)

            a(class='btn-menu' href='#') Меню
                .btn-menu__line
                .btn-menu__line
                .btn-menu__line
        .header__bottom
            .header__author
                .header__author-photo
                    img(src='img/man-photo.jpg' class='header__author-pic')
                h1.main-title.main-title_white= pageTitles.blog
                span.blog__subtitle= pageSubtitles.blog




